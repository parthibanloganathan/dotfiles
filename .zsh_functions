# GitHub Functions

# Function to go to top level of git project
toplevel()
{
  cd `git rev-parse --show-toplevel`
}

# Function to git clone a repo using SSH instead of HTTPS
gitcl()
{
  git clone git@github.com:$1
}

# Valgrind

# Function to run Valgrind check
vg()
{
  valgrind --leak-check=yes $1
}

# Function to run full Valgrind check
vgf()
{
  valgrind --leack-check=full -v $1
}

# Function to mount shared folder to ~/host
mw()
{
  sudo mount -t vboxsf $1 ~/host
}

# Temporary Functions

SRC=~/host
DEV=~/dev/sailthru

# function to copy libSailthru from shared folder sailthru to git repo
cpsgl()
{
  rm $DEV/mobile/SDK/android/libSailthru
  cp -r $SRC/libSailthru $DEV/mobile/SDK/android/libSailthru
}

# function to copy libSailthru from git repo to shared folder
cpgsl()
{
  rm $SRC/libSailthru
  cp -r $DEV/mobile/SDK/android/libSailthru $SRC/libSailthru
}

# function to copy test from shared folder sailthru to git repo
cpsga()
{
  rm $DEV/testSailthru/test
  cp -r $SRC/test $DEV/testSailthru
}

# function to copy testSailthru from git repo to shared folder
cpgsa()
{
  rm $SRC/test
  cp -r $DEV/testSailthru/test $SRC/test
}
